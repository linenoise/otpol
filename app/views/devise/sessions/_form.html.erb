<% resource ||= User.new %>
<% resource_name ||= :user %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
                                                                                                                                      
<%= f.text_field :login, class: "text-field form-control", spellcheck: "false", placeholder: "Username or Email" %>

<%= f.password_field :password, class: "text-field form-control", autocomplete: "off", placeholder: "Password" %>

<%= f.check_box :remember_me %>
<%= label_tag(:remember_me, "Remember Me") %>
                                                                                                                                      
<%= f.submit "Login", class: "form-control btn btn-primary" %>

<% end %>