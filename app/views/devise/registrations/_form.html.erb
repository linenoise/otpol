<% resource ||= User.new %>
<% resource_name ||= :user %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
<%= resource.errors.full_messages.join(', ') %>


<%= f.text_field :username, class: "text-field form-control", spellcheck: "false", placeholder: "Username" %>

<%= f.email_field :email, class: "text-field form-control", spellcheck: "false", placeholder: "Email" %>

<%= f.password_field :password, class: "text-field form-control", autocomplete: "off", placeholder: "Password" %>

<%= f.password_field :password_confirmation, class: "text-field form-control", autocomplete: "off", placeholder: "Password Confirmation" %>

<%= f.submit "Join", class: "btn btn-primary form-control" %>

<% end %>