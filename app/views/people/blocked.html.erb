<div class="profile container">
	<div class="row">
		<div class="col-md-12">
			<div class="content-box">

				<h2>Blocked People</h2>

				<div class="table-responsive">
				  <table class="table table-striped">
				    <thead>
				      <tr>
				        <th>Username</th>
				        <th>Name</th>
				        <th>Action</th>
				      </tr>
				    </thead>
				    <tbody>
					<% @block_list.each do |user| %>
				      <tr>
				      	<td><%= user.username %></td>
				        <td><%= user.name %></td>
				        <td><%= link_to('unblock', unblock_user_path(user.username), data: { confirm: 'Are you sure you would like to unblock this user?' }) %></td>
				      </tr>
				      <p></p>
					<% end %>
				    </tbody>
				  </table>
				</div>
			</div>
		</div>
	</div>
</div>